    dc.w    @T1+$8000, @T1+$8000, @T1+$8000, @T1+$8000
    dc.w    @T1+$8001, @T1+$8001, @T1+$8001, @T1+$8001
    dc.w    @T1+$8002, @T1+$8002, @T1+$8002, @T1+$8002
