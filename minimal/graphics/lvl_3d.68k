    dc.w    $8000, @T3+$7017, $8000, $8000
    dc.w    $8000, @T3+$7017, $8000, $8000
    dc.w    $8000, @T3+$7017, $8000, $8000
    dc.w    $8000, @T3+$7017, $8000, $8000

